# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                     controllers.Application.index()
GET     /register                             controllers.Application.register()
GET     /forgot-password                      controllers.Application.forgot_pwd()

POST    /login/attempt                        controllers.Login.attempt()
GET     /login                                controllers.Application.login(messageType:Int ?= 0)
GET     /logout                               controllers.Login.logout()

GET     /profile                              controllers.Application.profile(messageType:Int ?= 0)
POST    /profile/save                         controllers.Profile.save()

POST    /packagemanagement/edit/:packageid    controllers.PackageManagement.editpackage(packageid:Int)
POST    /packagemanagement/submit             controllers.PackageManagement.submit()
GET     /packagemanagement/:packageid/requestapproval         controllers.PackageManagement.requestapproval(packageid:Int)
GET     /packagemanagement/:packageid         controllers.PackageManagement.editindex(packageid:Int)
GET     /packagemanagement                    controllers.PackageManagement.index()

GET    /adminpanel/unapproved/lookat/:packageid/approve    controllers.AdminPanel.approvepackage(packageid:Int)
POST    /adminpanel/unapproved/lookat/:packageid/reject    controllers.AdminPanel.rejectpackage(packageid:Int)
GET     /adminpanel/unapproved/lookat/:packageid  controllers.AdminPanel.lookat(packageid:Int)
GET     /adminpanel/unapproved                    controllers.AdminPanel.unapprovedindex()

GET     /c/:catslug/:packageslug              controllers.Application.assetpackage(catslug:String,packageslug:String)
GET     /c/:catslug                           controllers.Application.category(catslug:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

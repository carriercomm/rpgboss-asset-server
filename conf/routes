# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                     controllers.Application.index()
GET     /register                             controllers.Application.register()
GET     /forgot-password                      controllers.Application.forgot_pwd()
POST     /login/attempt                        controllers.Login.attempt()
GET     /login                                controllers.Application.login(messageType:Int ?= 0)
GET     /logout                                controllers.Login.logout()
GET     /c/:catslug/:packageslug              controllers.Application.assetpackage(catslug:String,packageslug:String)
GET     /c/:catslug                           controllers.Application.category(catslug:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
